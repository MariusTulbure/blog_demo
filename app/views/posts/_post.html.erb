<div id="<%= dom_id post %>">

  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <h6>Posted by <%= link_to post.user.name, user_path(post.user) %> and has <%= pluralize(post.views, "view") %></h6>
      <p class="card-text"><%= post.body %></p>
    </div>
  </div>
</div>
