
<div class="container">
  <%= render @post %>

  <div>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-info btn-sm" %>
    <%= link_to "Back", posts_path, class: "btn btn-info btn-sm" %>
    <%= button_to "Destroy", @post, method: :delete, class: "btn btn-danger btn-sm" %>
  </div>
</div>

<div class="container">
  <%= render 'comments/form', post: @post %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', post: @post, comment: comment %>
  <% end %>
</div>
